        <Frame CornerRadius="20" HorizontalOptions="FillAndExpand" VerticalOptions="End" BackgroundColor="Transparent" Padding="0">
            <Entry x:Name="messageEntry" 
                Placeholder="Message..." 
                Text="{Binding MessageText}" 
                BackgroundColor="Transparent" 
                Margin="12,0,48,0" 
                HorizontalOptions="FillAndExpand" 
                VerticalOptions="Center" 
            />
        </Frame>
        <Button 
            Text="Send" 
            IsVisible="{Binding Text, Source={x:Reference messageEntry}, Converter={StaticResource TextToVisibilityConverter}}" 
            BackgroundColor="Gray" 
            TextColor="White" 
            WidthRequest="60" 
            HeightRequest="40" 
            CornerRadius="20" 
            Margin="0,0,10,0"
